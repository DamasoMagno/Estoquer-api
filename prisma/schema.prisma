generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  password String
  orders   Order[]
  stock    Stock[]
}

model Stock {
  id        String      @id @default(uuid())
  product   String      @unique
  ownerId   String
  quantity  Int
  status    StockStatus
  createdAt DateTime
  owner     User?       @relation(fields: [ownerId], references: [id])

  @@index([ownerId])
}

model Order {
  id         String      @id @default(uuid())
  product    String
  customerId String
  price      Int
  quantity   Int
  isFinished Boolean     @default(false)
  origin     OrderOrigin
  orderType  OrderType
  deadline   DateTime
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  customer   User        @relation(fields: [customerId], references: [id], onUpdate: Cascade, onDelete: Cascade)

  @@index([customerId])
}

enum OrderType {
  INPUT
  OUTPUT
}

enum OrderOrigin {
  SUPPLIER
  CLIENT
}

enum StockStatus {
  AVAILABLE
  NOT_AVAILABLE
}
